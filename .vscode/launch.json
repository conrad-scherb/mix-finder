{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Frontend: Install dependencies",
            "cwd": "${workspaceRoot}/frontend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start"]
        },
        {
            "name": "Backend",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Backend: Install dependencies",
            "cwd": "${workspaceRoot}/backend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:dev"]
        }
    ],
    "compounds": [
        {
            "name": "MixFinder",
            "configurations": ["Frontend", "Backend"]
        }
    ]
}